<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/crtask">

    <!-- Button to start quiz -->
    <Button
        android:id="@+id/startQuizButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Quiz"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="@color/red"
        android:layout_gravity="center" />

    <!-- Display the result history -->
    <TextView
        android:id="@+id/tvHistoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History of Test Results"
        android:textSize="22sp"
        android:layout_marginTop="32dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:background="@drawable/clases"/>

    <!-- RecyclerView to display history -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTestHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
